datasource db {
    provider = "mongodb"
    url = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
}


model User {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    username String
    first_name String
    last_name String
    email String
    password_hash String
    created_at    DateTime @default(now()) @db.Timestamp
    updated_at    DateTime @default(now()) @updatedAt @db.Timestamp

    @@unique([username])
    @@unique([email])
    @@index([first_name])
    @@index([last_name])
    @@index([first_name, last_name])
}


model Todo {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    title String
    descripion String
    completed Boolean @default(false)
    created_at    DateTime @default(now()) @db.Timestamp
    updated_at    DateTime @default(now()) @updatedAt @db.Timestamp

    @@index([title])
    @@index([descripion])
    @@index([title, descripion])
}


model SubTodo {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    todo_id    String   @db.ObjectId
    descripion String
    completed Boolean @default(false)
    created_at    DateTime @default(now()) @db.Timestamp
    updated_at    DateTime @default(now()) @updatedAt @db.Timestamp

    @@index([todo_id])
    @@index([descripion])
    @@index([descripion, todo_id])
}